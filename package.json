{
  "name": "pothos-drizzle-generator-sample",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "dev:docker": "docker compose -f docker/development/docker-compose.yml up -d",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "tsx tools/change-schema && drizzle-kit migrate && tsx tools/change-schema public",
    "drizzle:reset": "tsx tools/reset",
    "drizzle:seed": "tsx tools/seed",
    "build": "tsc",
    "start": "node dist",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src"
  },
  "dependencies": {
    "@hono/graphql-server": "^0.7.0",
    "@hono/node-server": "^1.19.7",
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-drizzle": "^0.16.0",
    "@types/graphql": "^14.5.0",
    "apollo-explorer": "^1.1.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^1.0.0-beta.3-36e9b9e",
    "graphql-auto-query": "^1.0.4",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "pothos-drizzle-generator": "^0.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@graphql-tools/utils": "^10.11.0",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^1.0.0-beta.3-36e9b9e",
    "drizzle-seed": "^1.0.0-beta.3-36e9b9e",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "version": "1.0.0",
  "main": "index.js",
  "author": "SoraKumo <info@croud.jp>",
  "license": "MIT",
  "repository": "https://github.com/SoraKumo001/pothos-drizzle-generator-sample"
}
